{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}


<span> We are in : {{ _self }} </span> 


 <div class="container m-5">
        <div class="row"> 
                <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>

                            <form method="post" class="form-signin">

                                    {% if error %}
                                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                    {% endif %}

                                    {% if app.user %}
                                        <div class="mb-3">
                                            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                                        </div>
                                    {% endif %}

                                   <div class="form-group-row bg-light d-flex justify-content-center shadow mt-3 p-3">
                                        <div class="col-sm-6">

                                            <label for="inputEmail">Email</label>
                                            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control mb-3" autocomplete="email" required autofocus>

                                            {# </div>
                                            </div>

                                            <div class="form-group-row bg-light d-flex justify-content-center shadow mt-3 p-3">
                                            <div class="col-sm-6"> #}

                                            <label for="inputPassword">Password</label>
                                            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

                                            <button class="btn btn-lg btn-primary mt-3" type="submit"> Sign in</button>

                                            <br><br>
                                             <div>Don't have an account yet? Please register <a href="{{ path('app_user_register') }}"> here </a>!</div>
                                        </div>
                                        
                                    </div><!--/ form-group-row -->

                                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">


                                        {#
                                            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                                            See https://symfony.com/doc/current/security/remember_me.html

                                            <div class="checkbox mb-3">
                                                <label>
                                                    <input type="checkbox" name="_remember_me"> Remember me
                                                </label>
                                            </div>
                                        #}
                </form>
                    
                        </div><!--/col-->
                    </div><!--/row-->

           
 
{% endblock %}
