{# {% extends 'base.html.twig' %} #}
{% block navbar %}

        {{ include('admin/navbar.html.twig') }}

{% endblock %}
 
{% block body %}

   
    
 <div class="row">
    <div>
            <span> We are in : {{ _self }} </span> <br> 

            Count all users : {{ users|length}}
    </div>
    <hr>
        <h1> All Users </h1>

        <div class="container">
            <div class="row p-5">
                <div class="col-xs-6 rounded shadow p-5">

                    <h2>Search</h2>
                
                    {{ form_start(form) }}
                        {{ form_rest(form) }}

                        <button  class="btn btn-primary mt-3"  type="submit">Search</button>
                    {{ form_end(form)}}

                </div><!-- /col -->
            </div><!--/ row -->
        </div><!--/container-->

        <div class="container my-5">
            <div class="row p-5">
                <div class="col-xs-12 rounded shadow">

                <table class="table table-striped text-center">
                    <thead  class="text-light bg-dark">
                        <tr>
                            <th>Id</th>
                            <th >Email</th>
                            <th>Phone</th>
                            <th>Action</th>
                        </tr>

                    </thead>
                    <tbody>

                {% for user in users %}

                    <tr>
                        <td>{{ user.id }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.phone }}</td>
                        <td>
                            <button class="btn btn-info"><a class="" href="{{ path('app_admin_user_update', {id: user.id }) }}">Modify</a> </button>

                            &nbsp&nbsp&nbsp&nbsp
                                    
                            <button class="btn btn-danger"><a class="" href="{{ path('app_admin_user_delete', {id: user.id }) }}">Delete</a> </button>
                        </td>
                    </tr>

                 {% endfor %}

              </tbody>
            </table>

             </div><!-- /col -->
            </div><!--/ row -->
        </div><!--/container-->


{% endblock %}

{% block footer %}

        {{ include('admin/footer.html.twig') }}

{% endblock %}
